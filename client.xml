<?xml version="1.0" encoding="cp1251"?>
<beans xmlns      = "http://www.springframework.org/schema/beans"
       xmlns:xsi  = "http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util = "http://www.springframework.org/schema/util"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd"
>
                                        <!-- VIEW -->
<bean id    = "window"
      class = "pension.view.Window"
      init-method = "beforehand"
>
		  <constructor-arg>
	      <value>Пенсионная программа</value>
	   </constructor-arg>
		<property name = "minimumSize"    >
      	<bean class = "java.awt.Dimension">
      		<constructor-arg index = "0">
      			<value>640</value>
      	   </constructor-arg>
      		<constructor-arg index = "1">
      			<value>480</value>
      	   </constructor-arg>
      	</bean>
		</property>
	<property name = "toolbarComponents">
		<list>
			<bean parent = "toolbarButton" >
         	  	<constructor-arg>
						<ref bean = "newCaseAction"    />
         	   </constructor-arg>
			</bean>
			<bean parent = "toolbarButton" >
         	  	<constructor-arg>
						<ref bean = "searchByIdAction"    />
         	   </constructor-arg>
			</bean>
			<ref bean = "comboBox"/>
		</list>
	</property>
	    <property name = "tabbedComponents" >
			<list>
				<bean parent = "scrollPane">
         		<constructor-arg index = "0" >
						<ref bean = "archivesAdminTable"  />
         	   </constructor-arg>
			<property name = "name" value = "Архивы"  />
				</bean>
				<bean parent = "scrollPane">
         		<constructor-arg index = "0" >
						<ref bean = "employeesArchivesTable"  />
         	   </constructor-arg>
					<property name = "name" value = "Архивариусы"  />
				</bean>
			</list>
	</property>
	<property name = "tabbedPane"  >
		<ref   bean = "tabbedPane" />
	</property>
	  	<property name = "preferredSize"  >
      	<bean class = "java.awt.Dimension">
      		<constructor-arg index = "0">
      			<value>640</value>
      	   </constructor-arg>
      		<constructor-arg index = "1">
      			<value>480</value>
      	   </constructor-arg>
      	</bean>
		</property> 
</bean>
                                     <!-- PANELS -->
<bean id    = "casePanel"
      class = "pension.panels.CasePanel"
>
    <constructor-arg index = "0" >
		<list>
			<ref bean = "newCaseAction"    />
			<ref bean = "searchByIdAction"    />
		</list>
    </constructor-arg>
</bean>
									 
										<!--TABLES-->
	<bean id    = "pensionerTable"
         	parent= "abstractTable"
		>
		<constructor-arg index = "0">
			<ref bean = "employeeModel" />
		</constructor-arg>
		<constructor-arg index = "1">
			<ref bean   = "employeeArchivesListColumnModel"            />
		</constructor-arg>
	</bean>

	<bean id          = "abstractTable"
         class       = "pension.wrappers.Table"
         abstract    = "true"
		>
		<property name = "autoCreateRowSorter" value = "true" />
		<property name = "selectionMode">
			<util:constant static-field = "javax.swing.ListSelectionModel.SINGLE_SELECTION"    />
		</property>
	</bean>															
										
                                      <!-- WRAPPERS -->
       	<bean id       = "scrollPane"
         class    = "javax.swing.JScrollPane"
         abstract = "true"
		>
		<constructor-arg index = "1">
			<util:constant static-field = "javax.swing.JScrollPane.VERTICAL_SCROLLBAR_ALWAYS"  />
	   </constructor-arg>
		<constructor-arg index = "2">
			<util:constant static-field = "javax.swing.JScrollPane.HORIZONTAL_SCROLLBAR_NEVER" />
	   </constructor-arg>
       	</bean>
	
		<bean id       = "separator"
         class    = "javax.swing.JSeparator"
		>
	    </bean>
	    
   		<bean id       = "comboBox"
         class    = "pension.wrappers.ComboBox"
		>
		<constructor-arg index = "0" >
		<list>
                  <value>По возрасту</value>
                  <value>По инвалидности</value>
                  <value>По потере кормильца</value>
		</list>
  	    </constructor-arg>
	    </bean>

  	<bean id    = "tabbedPane"
         class = "pension.wrappers.TabbedPane"
		>
		<property name  = "children">
			<map>
				<entry key  = "Справа"      >
				  <ref bean = "archivesAdminTable" />
				</entry>
				<entry key  = "Зарплата"      >
				  <ref bean = "archivesAdminTable" />
				</entry>
				<entry key  = "Стаж"      >
				  <ref bean = "archivesAdminTable" />
				</entry>
				<entry key  = "Пенсия"      >
				  <ref bean = "archivesAdminTable" />
				</entry>
			</map>
		</property>
	</bean>  
	
	                    	<!--		BUTTONS		-->
	<bean id    = "toolbarButton"
         class = "javax.swing.JButton"
		>
	<property name = "minimumSize">
		<ref bean = "buttonSize" />
	</property>
	<property name = "maximumSize">
		<ref bean = "buttonSize" />
	</property>
	<property name = "preferredSize">
		<ref bean = "buttonSize" />
	</property>
   	<property name = "focusPainted" >
   		<value>false</value>
   	</property>
   	<property name = "focusable"    >
   		<value>false</value>
   	</property>
	</bean>

	<bean id    = "buttonSize"
         class = "java.awt.Dimension"
	>
		<constructor-arg index = "0">
			<value>120</value>
	   </constructor-arg>
		<constructor-arg index = "1">
			<value>35</value>
	   </constructor-arg>
	</bean>

                             <!-- ACTIONS -->
	<bean id    = "newCaseAction"
         class = "pension.actions.NewCaseAction"
		>
		<constructor-arg>
	      <value>Нова справа</value>
	   </constructor-arg>
	   	   	<property name = "dialog">
		<ref bean = "newCaseDialog" />
	</property>
	</bean>
	<bean id    = "searchByIdAction"
         class = "pension.actions.SearchById"
		>
		<constructor-arg>
	      <value>Пошук справи</value>
	   </constructor-arg>
	   	<property name = "service">
		<ref bean = "pensionerManagerServiceTarget" />
	</property>
	</bean>
	<bean id="pensionerManagerServiceTarget" class="pension.service.impl.PensionerManagerServiceImpl">
      <property name="pensionerDao" ref="pensionerDao"/>
</bean>

                                    <!-- DIALOGS -->
	<bean id    = "newCaseDialog"
         class = "pension.dialogs.CaseDialog"
		>
	<!--  	<constructor-arg index = "0">
			<ref bean = "environment" />
		</constructor-arg>
		<property name = "model" >
			<ref   bean = "archivesAdminModel"/>
		</property>    -->
	</bean>
</beans>


